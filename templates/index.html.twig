	<script>
		function toggleText() {
const moreText = document.getElementById('moreText');
const toggleButton = document.getElementById('toggleButton');

// Vérifie si le texte est actuellement caché
if (moreText.classList.contains('text-hidden')) {
moreText.classList.remove('text-hidden'); // Affiche le texte
toggleButton.innerText = 'Voir moins ▲'; // Change le texte du bouton
} else {
moreText.classList.add('text-hidden'); // Cache le texte
toggleButton.innerText = 'Voir plus ▼'; // Restaure le texte du bouton
}
}
