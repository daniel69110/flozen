{% extends 'base.html.twig' %}


{% block body %}
	<div class="flex justify-center my-20 mx-3">
		<div class="max-w-lg p-8 bg-white rounded-lg shadow-lg ">
			<h1 class="text-2xl font-bold text-center text-gray-800 mb-6">
				Choisissez le type de massage avant de confirmer la réservation
			</h1>
			<div class="p-6">
				<p class="text-center text-gray-700 mb-4">
					Date de début :
					{{ startDateTime|date('Y-m-d H:i') }}
					<br>
					Date de fin :
					{{ endDateTime|date('Y-m-d H:i') }}
				</p>

				{{ form_start(form) }}
				<div class="block">
					{{ form_label(form.name, 'Choisissez le type de massage', {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
					{{ form_widget(form.name, {'attr': {'class': 'block w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500'}}) }}
				</div>
				<div class="flex justify-center mt-2">
					{% if is_granted('ROLE_USER') %}
						<button class="mt-6 bg-customBlue hover:bg-blue-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
							Réserver
						</button>
					{% else %}
						<a href="{{ path('app_login') }}" class="mt-6 bg-customBlue hover:bg-blue-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
							Connectez-vous pour réserver
						</a>
					{% endif %}
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>


{% endblock %}
