{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
	<div class="flex justify-center my-20 mx-3">
    <div class="max-w-lg p-8 rounded-lg shadow-lg">
        <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Réinitialisez votre mot de passe</h1>

        {{ form_start(resetForm) }}
        
        <div class="mb-5">
            {{ form_row(resetForm.plainPassword, {
                'label': 'Nouveau mot de passe',
                'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
                'attr': {
                    'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'
                }
            }) }}
        </div>

        <div class="flex justify-center mt-4">
            <button type="submit" class="w-full bg-customBlue hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Valider
            </button>
        </div>

        {{ form_end(resetForm) }}
    </div>
</div>

{% endblock %}
