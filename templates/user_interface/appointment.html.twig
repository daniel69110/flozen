{% extends 'user_interface/base.html.twig' %}

{% block appointment %}
	<table>
		<thead>
			<tr>
				<th>Date de début</th>
				<th>Date de fin</th>
				<th>Statut</th>
				<th>Type</th>
			</tr>
		</thead>
		<tbody>
			{% for reservation in reservations %}
				<tr>
					<td>{{ reservation.startDateTime|date('Y-m-d H:i') }}</td>
					<td>{{ reservation.endDateTime|date('Y-m-d H:i') }}</td>
					<td>{{ reservation.status }}</td>
					<td>
						<form action="{{ path('appointment_delete', { id: reservation.id }) }}" method="post" style="display:inline;">
							<button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette réservation ?');" class="text-red-500">Supprimer</button>
						</form>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">Aucune réservation trouvée</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
