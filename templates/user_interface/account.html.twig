{% extends 'user_interface/base.html.twig' %}

{% block content %}

	<div class="md:ml-3 px-4 py-3 shadow-lg rounded-sm lg:w-[700px] md:w-[500px]">
		{{ form_start(user) }}

		{{ form_errors(user) }}


		<div class="lg:flex">
			<div class="block mr-2 w-full lg:w-1/2">
				{{ form_row(user.profilUser.firstName, {
            label: 'Prénom',
            'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
            'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
        }) }}
			</div>
			<div class="block w-full lg:w-1/2">
				{{ form_row(user.profilUser.lastName, {
            label: 'Nom',
            'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
            'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
        }) }}
			</div>
		</div>

		<div class="lg:flex">
			<div class="block mr-2 w-full lg:w-1/2">
				{{ form_row(user.profilUser.city, {
            label: 'Ville',
            'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
            'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
        }) }}
			</div>
			<div class="block w-full lg:w-1/2">
				{{ form_row(user.profilUser.postalCode, {
            label: 'Code postal',
            'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
            'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
        }) }}
			</div>
		</div>

		<div class="lg:flex">
			<div class="block mr-2 w-full lg:w-1/2">
				{{ form_row(user.profilUser.address, {
            label: 'Adresse',
            'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
            'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
        }) }}
			</div>
			<div class="block w-full lg:w-1/2">
				{{ form_row(user.profilUser.phone, {
            label: 'Téléphone',
            'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
            'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
        }) }}
			</div>
		</div>

		<div class="block">
			{{ form_row(user.profilUser.sexe, {
        label: 'Sexe',
        'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
        'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
    }) }}
		</div>

		<div class="block">
			{{ form_row(user.email, {
        label: 'Email',
        'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
        'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}
    }) }}
		</div>
		<div class="flex justify-center mt-2">
			<button class="mt-6 bg-customBlue hover:bg-blue-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
				Enregistrer les modifications
			</button>
		</div>
		{% for message in app.flashes('success') %}
			<div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
				<strong class="font-bold">Succès!</strong>
				<span class="block sm:inline">{{ message }}</span>
			</div>
		{% endfor %}
		{{ form_end(user) }}
		<form method="post" action="{{ path('delete_account') }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');">
			<input type="hidden" name="_token" value="{{ csrf_token('delete-account') }}">
			<div class="flex justify-center mt-4">
				<button type="submit" class="mt-6 bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
					Supprimer mon compte
				</button>
			</div>
		</form>


	</div>
{% endblock %}
