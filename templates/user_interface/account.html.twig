{% extends 'user_interface/base.html.twig' %}

{% block content %}

	<div class="ml-10">
		{{ form_start(user) }}

		{{ form_errors(user) }}

		

		<div class="lg:flex">
			<div class="block mr-2 w-full lg:w-1/2">
				{{ form_row(user.profilUser.firstName, {
            label: 'Prénom',
            'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
            'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
        }) }}
			</div>
			<div class="block w-full lg:w-1/2">
				{{ form_row(user.profilUser.lastName, {
            label: 'Nom',
            'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
            'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
        }) }}
			</div>
		</div>

		<div class="lg:flex">
			<div class="block mr-2 w-full lg:w-1/2">
