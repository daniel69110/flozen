{% extends 'user_interface/base.html.twig' %}

{% block content %}

	<div class="p-6">
		{{ form_start(profilUser) }}

		{{ form_errors(profilUser) }}

		<div class="lg:flex">
			<div class="block mr-2">

				{{ form_row(profilUser.firstName, {
            label: 'Prénom',
            'label_attr': {'class': 'block text-sm'},
            'attr': {'class':'border-solid border-2 mb-5'}
        }) }}
			</div>
			<div class="block">
				{{ form_row(profilUser.lastName, {
            label: 'Nom',
            'label_attr': {'class': 'block text-sm'},
            'attr': {'class':'border-solid border-2 mb-5'}
        }) }}
			</div>

		</div>

		<div class="lg:flex">
			<div class="block mr-2">
				{{ form_row(profilUser.city, {
            label: 'Ville',
            'label_attr': {'class': 'block text-sm'},
            'attr': {'class':'border-solid border-2 mb-5'}
        }) }}
			</div>
			<div class="block">
				{{ form_row(profilUser.postalCode, {
            label: 'Code postale',
            'label_attr': {'class': 'block text-sm'},
            'attr': {'class':'border-solid border-2 mb-5'}
        }) }}
			</div>

		</div>

		<div class="lg:flex">
			<div class="block mr-2">

				{{ form_row(profilUser.address, {
            label: 'Adresse',
            'label_attr': {'class': 'block text-sm'},
            'attr': {'class':'border-solid border-2 mb-5'}
        }) }}
			</div>
			<div class="block">

				{{ form_row(profilUser.phone, {
            label: 'Téléphone',
            'label_attr': {'class': 'block text-sm'},
            'attr': {'class':'border-solid border-2 mb-5'}
        }) }}
			</div>

		</div>
		<div class="block">

			{{ form_row(profilUser.sexe, {
            label: 'Sexe',
            'label_attr': {'class': 'block text-sm'},
            'attr': {'class':'border-solid border-2 mb-5'}
        }) }}
		</div>


		<button class="block btn btn-lg btn-primary bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" type="submit ">
			Enregistrer les modifications
		</button>

		{{ form_end(profilUser) }}
	</div>
{% endblock %}
