{% extends "base.html.twig" %}

{% block register %}
	<div
		class="flex flex-col justify-center items-center p-6">

		<!-- Ajouté items-center et min-h-screen -->
		<div class="w-full">
			{{ form_start(registrationForm) }}
			<div
				class="shadow-md shadow-black rounded-md p-11 w-full max-w-4xl mx-auto my-10">
				<!-- Ajout de mx-auto pour recentrer -->
				<h1 class="text-2xl mb-5 flex justify-center">Inscription</h1>

				{{ form_errors(registrationForm) }}

				{{ form_row(registrationForm.email, {
                    label: 'Email* :',
                    'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
                    'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
                }) }}

				{{ form_row(registrationForm.password.first, {
                    label: 'Mot de passe* :',
                    'label_attr':{'class': 'block text-gray-700 text-sm font-bold mb-2'},
                    'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
                }) }}

				{{ form_row(registrationForm.password.second, {
                    label: 'Confirmer le mot de passe* :',
                    'label_attr':{'class': 'block text-gray-700 text-sm font-bold mb-2'},
                    'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5'}
                }) }}

				{{ form_row(registrationForm.agreeTerms, {
					label_html: true,
					label: "J'accepte les <a href='" ~ path('terms_conditions') ~ "' target='_blank' class='underline text-blue-500 hover:text-blue-700'>conditions</a>"
				}) }}


				<button type="submit" class="block bg-customBlue hover:bg-blue-800 text-white font-bold py-2 px-4 rounded text-center w-full">S'inscrire</button>

				<p class="mt-4">Déjà un compte?
					<a href="{{ path('app_login') }}" class="text-blue-600 hover:underline">Connectez-vous</a>
				</p>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
