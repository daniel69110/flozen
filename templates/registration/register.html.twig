{% extends "base.html.twig" %}

    


{% block body %}

<div class="flex justify-center">
<div class="w-1/4 border-solid border-2 border-black block justify-center mt-10">
<h1 class="font-bold text-2xl mb-5 flex justify-center">Inscription</h1>


    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}

        {{ form_row(registrationForm.email) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Register</button>
    {{ form_end(registrationForm) }}

</div>
</div>
{% endblock %}

