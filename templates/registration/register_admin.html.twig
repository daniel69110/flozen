{% extends 'user_interface/base.html.twig' %}

{% block register_admin %}

	<div class="px-4 py-6 mx-auto">
		{{ form_start(registrationForm) }}

		{{ form_errors(registrationForm) }}

		<div class="lg:flex">
			<div class="block mr-2 w-full lg:w-1/2">
				{{ form_row(registrationForm.email, {
                'label': 'Email :',
                'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
                'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}
            }) }}
			</div>
		</div>

		<div class="lg:flex mt-4">
			<div class="block mr-2 w-full lg:w-1/2">
				{{ form_row(registrationForm.password.first, {
                'label': 'Mot de passe :',
                'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
                'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}
            }) }}
			</div>
			<div class="block w-full lg:w-1/2">
				{{ form_row(registrationForm.password.second, {
                'label': 'Confirmer le mot de passe :',
                'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
                'attr': {'class':'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline'}
            }) }}
			</div>
		</div>

		<div class="lg:flex mt-4">
			<div class="block mr-2 w-full lg:w-1/2">
				{{ form_row(registrationForm.roles, {
                'label': 'Rôle :',
                'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'},
                'attr': {'class': 'mb-5'}
            }) }}
			</div>
		</div>

		{{ form_row(registrationForm.agreeTerms, {
        'label': "J'accepte les conditions",
        'label_attr': {'class': 'inline-flex items-center'},
        'attr': {'class': 'mr-2'}
    }) }}

		<div class="flex justify-center mt-2">
			<button class="mt-6 bg-customBlue hover:bg-blue-800 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
				créer
			</button>
		</div>

		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
