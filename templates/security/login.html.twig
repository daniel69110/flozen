{% extends "base.html.twig" %}

{% block login %}
    <div class="flex justify-center items-center min-h-screen p-6"> <!-- Ajouté items-center et min-h-screen -->
        <form method="post" class="shadow-md shadow-customBlue rounded-md p-11 w-full max-w-2xl mx-auto"> <!-- Ajout de w-full et max-w-2xl avec mx-auto -->
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <h1 class="text-2xl mb-5 flex justify-center">Connectez-vous</h1>
            <label for="username" class="block text-gray-700 text-sm font-bold mb-2">Email* :</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5" autocomplete="email" required autofocus>

            <label for="password" class=" text-gray-700 text-sm font-bold mb-2">Mot de passe* :</label>
            <input type="password" name="_password" id="password" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-5" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="block bg-customBlue hover:bg-blue-800 text-white font-bold py-2 px-4 rounded text-center w-full mt-3" type="submit">
                Se connecter
            </button>

            <a href="{{ path('app_forgot_password_request') }}" class="block hover:text-blue-600 text-center mt-3">
                Mot de passe oublié ?
            </a>
            
            {% if app.user %}
                <a href="{{ path('app_logout') }}" class="mt-2 block bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-center">
                    Se déconnecter
                </a>
            {% endif %}

            <a href="{{ path('app_register') }}" class="block bg-customBlue hover:bg-blue-800 text-white font-bold py-2 px-4 mt-3 rounded text-center">
                S'inscrire
            </a>
        </form>
    </div>
{% endblock %}
