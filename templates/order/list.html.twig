{% extends 'user_interface/base.html.twig' %}

{% block order %}

	<div class="md:px-4 py-3">
		<div class="max-sm:w-[340px] max-lg:w-[500px] max-xl:w-[700px] w-[1000px]">
			<div class="overflow-x-auto">
				<table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
					<thead class="bg-gray-100 sticky top-0 z-10">
						<tr class="border-b">
							<th class="py-4 px-4 text-center text-gray-700 font-semibold min-w-[150px]">Commande</th>
							<th class="py-4 px-4 text-center text-gray-700 font-semibold min-w-[100px]">Date</th>
							<th class="py-4 px-4 text-center text-gray-700 font-semibold min-w-[100px]">Total</th>
							<th class="py-4 px-4 text-center text-gray-700 font-semibold min-w-[100px]">Statut</th>
							<th class="py-4 px-4 text-center text-gray-700 font-semibold min-w-[100px]">Action</th>
						</tr>
					</thead>
					<tbody class="whitespace-nowrap">
						{% for order in orders %}
							<tr class="border-b hover:bg-gray-50">
								<td class="py-2 px-4 text-center">#{{ order.id }}</td>
								<td class="py-2 px-4 text-center">{{ order.dateOrder|date('d/m/Y') }}</td>
								<td class="py-2 px-4 text-center">{{ order.total }}
									€</td>
								<td class="py-2 px-4 text-center">{{ order.status.name }}</td>
								<td class="py-2 px-4 text-center">
									<a href="{{ path('order_detail', { id: order.id }) }}" class="text-white bg-blue-500 hover:bg-blue-600 rounded px-4 py-2">Détails</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5" class="py-4 px-4 text-center text-gray-500">Aucune commande trouvée</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>

{% endblock %}
