{% extends 'user_interface/base.html.twig' %}

{% block availability_list %}
	<div class="md:px-4 py-3">
		<div class="max-sm:w-[380px] overflow-x-auto">
			<table class="min-w-full bg-white border border-gray-300 rounded-lg shadow-md">
				<thead class="bg-gray-100 sticky top-0 z-10">
					<tr class="border-b">
						<th class="py-4 px-4 text-center text-gray-700 font-semibold min-w-[150px]">Début</th>
						<th class="py-4 px-4 text-center text-gray-700 font-semibold min-w-[150px]">Fin</th>
						<th class="py-4 px-4 text-center text-gray-700 font-semibold min-w-[150px]">Action</th>
					</tr>
				</thead>
				<tbody class="whitespace-nowrap">
					{% for availability in availabilities %}
						<tr class="border-b hover:bg-gray-50">
							<td class="py-2 px-4 text-center">{{ availability.startDateTime|date('Y-m-d H:i') }}</td>
							<td class="py-2 px-4 text-center">{{ availability.endDateTime|date('Y-m-d H:i') }}</td>
							<td class="py-auto px-4 flex justify-center items-center">
								<a href="{{ path('availability_delete', { id: availability.id }) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette disponibilité ?');" class="text-white bg-red-500 hover:bg-red-600 rounded px-4 py-2">
									Supprimer
								</a>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="3" class="py-4 px-4 text-center text-gray-500">Aucune disponibilité trouvée</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}
